{
  "name": "orchard-web-core",
  "version": "0.0.1",
  "description": "A core website built for orchard",
  "scripts": {
    "lint": "yarn lint:js && yarn lint:styled",
    "lint:js": "eslint -c .eslintrc packages --ext .ts,.tsx --quiet",
    "lint:styled": "stylelint \"packages/**/styled.ts\"",
    "test": "jest --silent --passWithNoTests",
    "build": "yarn build:tokens && yarn build:frontend",
    "build:frontend": "webpack --config packages/app/webpack/webpack.prod.js",
    "build:tokens": "node ./node_modules/@aw-web-design/theme/generate",
    "start": "yarn build:tokens && yarn start:frontend",
    "start:frontend": "webpack-dev-server --host 0.0.0.0 --config packages/app/webpack/webpack.dev.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AW-Web-Design/Website-Core.git"
  },
  "author": "Andy Wilson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AW-Web-Design/Website-Core/issues"
  },
  "homepage": "https://github.com/AW-Web-Design/Website-Core#readme",
  "dependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "copy-webpack-plugin": "^5.1.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "typescript": "^4.2.2",
    "enhanced-resolve": "5.2.0",
    "styled-components": "5.2.0",
    "styled-system": "5.1.5",
    "csstype": "3.0.7",
    "@aw-web-design/theme": "0.0.25",
    "@aw-web-design/components": "0.0.12"
  },
  "devDependencies": {
    "@types/webpack": "^4.41.22",
    "@types/webpack-env": "^1.15.3",
    "@babel/core": "^7.13.8",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "copy-webpack-plugin": "^5.1.1",
    "fork-ts-checker-webpack-plugin": "^5.2.0",
    "html-webpack-plugin": "^5.2.0",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.4",
    "babel-eslint": "^10.1.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.21.2",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-standard": "^4.0.1",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-sass-guidelines": "^5.4.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^2.2.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "prettier": "2.1.2",
    "circular-dependency-plugin": "5.2.0",
    "@storybook/addon-docs": "6.1.20",
    "css-loader": "5.1.1",
    "mini-css-extract-plugin": "1.3.9",
    "ts-loader": "8.0.17",
    "babel-loader": "^8.1.0",
    "jest": "26.4.2",
    "jest-cli": "26.4.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss|svg)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "<rootDir>/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "/^\/node_modules\/@orchard\/((theme)|(theme-provider))$/"
    ],
    "resolver": "./jestAliasResolver"
  }
}
