{
  "name": "orchard-web-core",
  "version": "0.0.1",
  "description": "A core website built for orchard",
  "scripts": {
    "lint": "yarn lint:js && yarn lint:styled",
    "lint:js": "eslint -c .eslintrc packages --ext .ts,.tsx --quiet",
    "lint:styled": "stylelint \"packages/**/styled.ts\"",
    "test": "jest --silent --passWithNoTests",
    "build": "yarn build:tokens && yarn build:frontend",
    "build:frontend": "webpack --config packages/app/webpack/webpack.prod.js",
    "build:tokens": "node ./node_modules/@aw-web-design/theme/generate",
    "start": "yarn build:tokens && yarn start:frontend",
    "start:frontend": "webpack-dev-server --host 0.0.0.0 --config packages/app/webpack/webpack.dev.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AW-Web-Design/Website-Core.git"
  },
  "author": "Andy Wilson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AW-Web-Design/Website-Core/issues"
  },
  "homepage": "https://github.com/AW-Web-Design/Website-Core#readme",
  "dependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "copy-webpack-plugin": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "typescript": "^3.6.3",
    "enhanced-resolve": "5.0.0-beta.4",
    "styled-components": "5.1.0",
    "styled-system": "5.1.5",
    "csstype": "2.6.10",
    "@aw-web-design/theme": "0.0.14",
    "@aw-web-design/components": "0.0.3"
  },
  "devDependencies": {
    "@types/webpack": "^4.39.1",
    "@types/webpack-env": "^1.14.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "copy-webpack-plugin": "^6.0.1",
    "fork-ts-checker-webpack-plugin": "^4.1.3",
    "html-webpack-plugin": "^4.2.1",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.4",
    "babel-eslint": "^10.0.1",
    "eslint-config-airbnb": "^18.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-standard": "^4.0.1",
    "stylelint": "^9.1.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-sass-guidelines": "^5.3.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^1.0.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "prettier": "2.0.5",
    "circular-dependency-plugin": "5.2.0",
    "@storybook/addon-docs": "5.3.18",
    "css-loader": "3.5.3",
    "mini-css-extract-plugin": "0.9.0",
    "ts-loader": "7.0.4",
    "babel-loader": "^8.0.4",
    "jest": "26.0.1",
    "jest-cli": "26.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss|svg)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "<rootDir>/setupTests.js"
    ],
    "resolver": "./jestAliasResolver"
  }
}
